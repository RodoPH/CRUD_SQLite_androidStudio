<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_consultar_articulo"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encuentra artículo"
        android:textAlignment="center"
        android:textSize="40dp"
        android:fontFamily="monospace"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Buscar registro"
        android:id="@+id/Buscar_consulta" />
    <EditText
        android:id="@+id/consulta_id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="ID"
        android:textSize="24dp" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de artículo"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/consulta_descripcion"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:id="@+id/consulta_precio"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:layout_marginRight="10dp"
            android:id="@+id/consulta_update"
            android:background="@drawable/actualizar"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:id="@+id/consulta_btnEliminar"
            android:background="@drawable/cancelar"/>
    </LinearLayout>

</LinearLayout>